<% content_for :title, "Welcome to Pollito" %>
<div class="container mx-auto px-4 py-8">
  <!-- Hero Section -->
  <div class="text-center mb-12">
    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Welcome to Pollito</h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      Predict match outcomes, compete with friends, and climb the leaderboard.
    </p>
  </div>
  <% if authenticated? %>
    <!-- Authenticated User Dashboard -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- My Pools -->
        <div class="bg-white shadow-md rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900">My Betting Pools</h2>
          </div>
          <div class="p-6">
            <% if @user_pools.any? %>
              <div class="space-y-4">
                <!-- User pools -->
                <% @user_pools.each do |pool| %>
                  <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors duration-150">
                    <div class="flex items-center justify-between mb-2">
                      <h3 class="text-lg font-semibold text-gray-900">
                        <%= link_to pool.name, betting_pool_path(pool), class: "hover:underline" %>
                      </h3>
                      <span class="text-sm text-gray-500">
                        <%= pool.member_count %> members
                      </span>
                    </div>
                    <p class="text-sm text-gray-600">
                      <%= link_to pool.event.name, event_path(pool.event),
                        class: "text-blue-600 hover:text-blue-800" %>
                    </p>
                    <div class="mt-3 text-sm text-gray-500">
                      <%= pool.predictions.size %> predictions made
                    </div>
                  </div>
                <% end %>
                <!-- User pools end -->
              </div>
            <% else %>
              <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                <p class="text-gray-500 text-lg mb-4">No pools yet</p>
                <%= link_to "Browse Pools", betting_pools_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- Sidebar -->
      <div class="lg:col-span-1 space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white shadow-md rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900">Quick Actions</h2>
          </div>
          <div class="p-6 space-y-3">
            <%= link_to predictions_path, class: "block w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 text-center" do %>
              Make Predictions
            <% end %>
            <%= link_to betting_pools_path, class: "block w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 text-center" do %>
              Browse Pools
            <% end %>
          </div>
        </div>
        <!-- Upcoming Matches -->
        <% if @pending_predictions.any? %>
          <div class="bg-white shadow-md rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
              <h2 class="text-xl font-semibold text-gray-900">Upcoming Matches</h2>
            </div>
            <div class="p-6">
              <div class="space-y-3">
                <% @pending_predictions.each do |match| %>
                  <div class="border border-gray-200 rounded-lg p-3">
                    <p class="font-medium text-gray-900 text-sm mb-1">
                      <%= match.display_name %>
                    </p>
                    <p class="text-xs text-gray-500">
                      <%= match.match_date.strftime("%b %d, %H:%M") %>
                    </p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Anonymous User Landing -->
    <div class="max-w-4xl mx-auto">
      <!-- How It Works -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white shadow-md rounded-lg p-6">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Make Predictions</h3>
          <p class="text-gray-600">Predict the outcomes of upcoming matches in your favorite events.</p>
        </div>
        <div class="bg-white shadow-md rounded-lg p-6">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Join Pools</h3>
          <p class="text-gray-600">Create or join betting pools with friends and compete together.</p>
        </div>
        <div class="bg-white shadow-md rounded-lg p-6">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Track Stats</h3>
          <p class="text-gray-600">See how your predictions stack up and climb the leaderboard.</p>
        </div>
      </div>
      <!-- CTA -->
      <div class="bg-white shadow-md rounded-lg p-8 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Ready to get started?</h2>
        <p class="text-gray-600 mb-6">
          Sign up now and start making predictions with your friends.
        </p>
        <%= link_to "Sign Up", new_session_path, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors duration-200" %>
      </div>
      <!-- Active Events (if available) -->
      <% if @active_events.any? %>
        <div class="mt-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Active Events</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% @active_events.first(4).each do |event| %>
              <%= link_to event_path(event), class: "block bg-white shadow-md rounded-lg p-6 hover:bg-gray-50 transition-colors duration-150" do %>
                <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= event.name %></h3>
                <div class="space-y-1 text-sm text-gray-600">
                  <p><%= event.start_date.strftime("%b %d") %> - <%= event.end_date.strftime("%b %d, %Y") %></p>
                  <p><%= event.matches.count %> matches</p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>