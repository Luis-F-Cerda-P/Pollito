<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Betting Pools</h1>
    <% if Current.user %>
      <%= link_to "New Betting Pool", new_betting_pool_path, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
    <% end %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @betting_pools.each do |betting_pool| %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            <%= link_to betting_pool.name, betting_pool, class: "text-blue-600 hover:text-blue-800" %>
          </h3>
          <div class="mb-4">
            <%= link_to betting_pool.event.name, betting_pool.event, 
                class: "text-sm text-indigo-600 hover:text-indigo-800 font-medium" %>
          </div>
          <div class="space-y-2 text-sm text-gray-500 mb-4">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Created by <%= betting_pool.creator.email_address %>
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <%= betting_pool.betting_pool_memberships.count %> members
            </div>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              <%= betting_pool.predictions.count %> predictions
            </div>
          </div>
          <div class="flex justify-between items-center">
            <div class="flex space-x-2">
              <%= link_to "View", betting_pool, 
                  class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
              <% if Current.user && (betting_pool.creator == Current.user) %>
                <%= link_to "Edit", edit_betting_pool_path(betting_pool), 
                    class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
              <% end %>
            </div>
            <div class="flex space-x-2">
              <% if Current.user && (betting_pool.creator == Current.user) %>
                <%= link_to "Delete", betting_pool, method: :delete, 
                    data: { confirm: "Are you sure you want to delete this betting pool?" },
                    class: "text-red-600 hover:text-red-900 text-sm font-medium" %>
              <% elsif Current.user %>
                <% membership = betting_pool.betting_pool_memberships.find_by(user: Current.user) %>
                <% if membership %>
                  <%= link_to "Leave", leave_betting_pool_path(betting_pool), method: :post,
                      data: { confirm: "Are you sure you want to leave this betting pool?" },
                      class: "text-orange-600 hover:text-orange-900 text-sm font-medium" %>
                <% else %>
                  <%= link_to "Join", join_betting_pool_path(betting_pool), method: :post,
                      class: "text-green-600 hover:text-green-900 text-sm font-medium" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if @betting_pools.empty? %>
    <div class="text-center py-12">
      <div class="text-gray-500 text-lg mb-4">No betting pools found</div>
      <% if Current.user %>
        <%= link_to "Create your first betting pool", new_betting_pool_path, 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
      <% end %>
    </div>
  <% end %>
</div>
