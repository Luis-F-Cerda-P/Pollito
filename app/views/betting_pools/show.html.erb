<div class="container mx-auto px-4 py-8">
  <div class="flex flex-wrap justify-between items-center mb-8">
    <div class="flex items-center space-x-4 mb-2 sm:mb-0">
      <h1 class="text-nowrap text-3xl font-bold text-gray-900"><%= @betting_pool.name %></h1>
      <% if @betting_pool.is_public %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
          Public
        </span>
      <% else %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
          Private
        </span>
      <% end %>
    </div>
    <div class="flex space-x-3">
      <% if @betting_pool.creator == Current.user %>
        <%= link_to "Edit", edit_betting_pool_path(@betting_pool),
            class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
      <% end %>
      <%= link_to "Back to Betting Pools", betting_pools_path,
          class: "text-nowrap bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
    </div>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Pool Information -->
      <div class="bg-white shadow-md rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Pool Information</h2>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-1">Event</h3>
              <p class="text-lg text-gray-900">
                <%= link_to @betting_pool.event.name, @betting_pool.event, class: "text-blue-600 hover:text-blue-800" %>
              </p>
            </div>
            <div>
              <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-1">Created by</h3>
              <p class="text-lg text-gray-900"><%= @betting_pool.creator.email_address %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Make Your Predictions (members only) -->
      <% if @betting_pool.user_in_pool?(Current.user) %>
        <%= render "betting_pools/predictions_section" %>
      <% end %>

      <!-- Recent Predictions -->
      <div class="bg-white shadow-md rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Recent Predictions (<%= @predictions.size %>)</h2>
        </div>
        <div class="p-6">
          <% if @predictions.any? %>
            <div class="space-y-4">
              <% @predictions.each do |prediction| %>
                <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors duration-150">
                  <!-- Prediction Header -->
                  <div class="flex items-center justify-between mb-3">
                    <div class="flex items-center space-x-3">
                      <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm font-medium">
                        <%= prediction.user.email_address.first.upcase %>
                      </div>
                      <div>
                        <div class="font-medium text-gray-900"><%= prediction.user.email_address %></div>
                        <div class="text-xs text-gray-500">
                          <%= prediction.match.participants.map(&:name).join(" vs ") %>
                        </div>
                      </div>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= prediction.created_at.strftime("%b %d, %Y") %>
                    </div>
                  </div>
                  <!-- Predicted Scores -->
                  <div class="grid grid-cols-2 gap-3">
                    <% prediction.predicted_results.each do |pr| %>
                      <div class="flex items-center justify-between bg-blue-50 rounded-lg px-3 py-2">
                        <span class="text-sm font-medium text-gray-700">
                          <%= pr.match_participant.participant.name %>
                        </span>
                        <span class="text-lg font-bold text-blue-600">
                          <%= pr.score %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                  <!-- Actual Results (if available) -->
                  <% if prediction.match.match_participants.all? { |mp| mp.result&.final } %>
                    <div class="mt-3 pt-3 border-t border-gray-200">
                      <div class="text-xs font-medium text-gray-500 uppercase mb-2">Actual Result</div>
                      <div class="grid grid-cols-2 gap-3">
                        <% prediction.match.match_participants.each do |mp| %>
                          <div class="flex items-center justify-between bg-green-50 rounded-lg px-3 py-2">
                            <span class="text-sm font-medium text-gray-700">
                              <%= mp.participant.name %>
                            </span>
                            <span class="text-lg font-bold text-green-600">
                              <%= mp.result.score %>
                            </span>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
              <div class="text-gray-500 text-lg">No predictions yet</div>
              <p class="text-gray-600 mt-2">Be the first to make a prediction in this pool!</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Sidebar -->
    <div class="lg:col-span-1">
      <% if @betting_pool.creator == Current.user && !@betting_pool.is_public %>
        <!-- Invite Link Section -->
        <div class="bg-white shadow-md rounded-lg mb-6">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-900">Invite Link</h2>
          </div>
          <div class="p-6">
            <% if @betting_pool.invite_valid? %>
              <p class="text-sm text-gray-600 mb-3">Share this link to invite people to your pool:</p>
              <div class="flex space-x-2">
                <input type="text"
                       readonly
                       value="<%= join_pool_url(@betting_pool.invite_code) %>"
                       class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-md bg-gray-50 text-gray-700"
                       id="invite-link-input" />
                <button type="button"
                        onclick="navigator.clipboard.writeText(document.getElementById('invite-link-input').value); this.textContent = 'Copied!'; setTimeout(() => this.textContent = 'Copy', 2000);"
                        class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-md transition-colors duration-200">
                  Copy
                </button>
              </div>
            <% else %>
              <div class="flex items-center text-amber-600">
                <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
                <span class="text-sm">Invite link has expired (event ended).</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Members List -->
      <div class="bg-white shadow-md rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Members (<%= @memberships.size %>)</h2>
        </div>
        <div class="p-6">
          <div class="space-y-3">
            <% @memberships.each do |membership| %>
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-white text-sm font-medium">
                    <%= membership.user.email_address.first.upcase %>
                  </div>
                  <div>
                    <div class="font-medium text-gray-900"><%= membership.user.email_address %></div>
                    <div class="text-xs text-gray-500">
                      <%= membership.admin? ? "Admin" : "Member" %> â€¢ Joined <%= membership.created_at.strftime("%b %d, %Y") %>
                    </div>
                  </div>
                </div>
                <div class="text-right font-medium text-gray-900">
                  <%= membership.score || 0 %> pts
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
