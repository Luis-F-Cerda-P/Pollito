<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Edit Betting Pool</h1>
    <%= link_to "Back to Pool", @betting_pool, 
        class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
  </div>
  <div class="bg-white shadow-md rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Update Pool Information</h2>
    </div>
    <div class="p-6">
      <%= form_with(model: @betting_pool, local: true, class: "space-y-6") do |form| %>
        <% if @betting_pool.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@betting_pool.errors.count, "error") %> prohibited this betting pool from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside">
                    <% @betting_pool.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
              placeholder: "Enter betting pool name" %>
        </div>
        <div>
          <%= form.label :event_id, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :event_id,
              options_from_collection_for_select(@events, :id, :name, @betting_pool.event_id),
              { prompt: "Select an event" },
              { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          <p class="mt-1 text-sm text-gray-500">The event this betting pool is for</p>
        </div>
        <div>
          <div class="flex items-center">
            <%= form.check_box :is_public, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
            <%= form.label :is_public, "Make this pool public", class: "ml-2 block text-sm font-medium text-gray-700" %>
          </div>
          <p class="mt-1 text-sm text-gray-500">
            Public pools can be viewed by anyone. Private pools are only visible to members.
          </p>
        </div>
        <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">Changing Events</h3>
              <div class="mt-2 text-sm text-yellow-700">
                Changing the event may affect existing predictions and matches. Please consider this carefully before making changes.
              </div>
            </div>
          </div>
        </div>
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", @betting_pool, 
              class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
          <%= form.submit "Update Betting Pool", 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
