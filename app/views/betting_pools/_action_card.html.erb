<div class="bg-white border-2 border-dashed border-gray-300 rounded-lg p-6">
  <div class="space-y-6">
    <div data-controller="invite-code-form">
      <h4 class="text-sm font-medium text-gray-700 mb-2">Have an invite code?</h4>
      <div class="flex space-x-2">
        <input
          type="text"
          data-invite-code-form-target="input"
          placeholder="Enter 8-character code"
          maxlength="8"
          class="flex-1 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
        >
        <button
          type="button"
          data-action="click->invite-code-form#submit"
          class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 text-sm"
        >
          Join Pool
        </button>
      </div>
      <p data-invite-code-form-target="error" class="mt-1 text-sm text-red-600 hidden"></p>
    </div>

    <div class="border-t border-gray-200 pt-6">
      <%= link_to new_betting_pool_path,
          class: "w-full flex items-center justify-center bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Betting Pool
      <% end %>
    </div>
  </div>
</div>
