<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">My Predictions</h1>
    <%= link_to "New Prediction", new_prediction_path, 
        class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
  </div>
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50 border-b border-gray-200">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Betting Pool</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Match</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Your Prediction</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actual Score</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Match Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @predictions.each do |prediction| %>
            <tr class="hover:bg-gray-50 transition-colors duration-150">
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to prediction.betting_pool.name, prediction.betting_pool, 
                    class: "text-blue-600 hover:text-blue-800 font-medium text-sm" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm">
                  <div class="font-medium text-gray-900">
                    <%= prediction.match.participants.map(&:name).join(" vs ") %>
                  </div>
                  <div class="text-gray-500"><%= prediction.match.event.name %></div>
                </div>
              </td>
              <td class="px-6 py-4">
                <div class="flex flex-col space-y-1">
                  <% prediction.predicted_results.includes(:match_participant).each do |pr| %>
                    <div class="flex items-center justify-between bg-blue-50 rounded px-2 py-1">
                      <span class="text-xs font-medium text-gray-700">
                        <%= pr.match_participant.participant.name %>
                      </span>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold text-blue-800">
                        <%= pr.score %>
                      </span>
                    </div>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4">
                <% if prediction.match.match_participants.all? { |mp| mp.result&.final } %>
                  <div class="flex flex-col space-y-1">
                    <% prediction.match.match_participants.includes(:participant, :result).each do |mp| %>
                      <div class="flex items-center justify-between bg-green-50 rounded px-2 py-1">
                        <span class="text-xs font-medium text-gray-700">
                          <%= mp.participant.name %>
                        </span>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-bold text-green-800">
                          <%= mp.result&.score || "-" %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    Not played
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <div><%= prediction.match.match_date.strftime("%b %d, %Y") %></div>
                <div class="text-gray-500"><%= prediction.match.match_date.strftime("%H:%M") %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% match_completed = prediction.match.match_participants.all? { |mp| mp.result&.final } %>
                <% if !match_completed %>
                  <%= link_to "Edit", edit_prediction_path(prediction), 
                      class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
                  <%= link_to "Delete", prediction, 
                    data: { 
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure you want to delete this prediction?"
                    },
                    class: "text-red-600 hover:text-red-900" %>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Final
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <% if @predictions.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
      </svg>
      <div class="text-gray-500 text-lg mb-2 font-medium">No predictions yet</div>
      <p class="text-gray-600 mb-6">Join a betting pool and start making predictions!</p>
      <%= link_to "Make Your First Prediction", new_prediction_path, 
          class: "inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
    </div>
  <% end %>
</div>