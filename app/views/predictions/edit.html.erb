<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Edit Prediction</h1>
    <%= link_to "Back to Pool", @prediction.betting_pool, 
        class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
  </div>
  <div class="bg-white shadow-md rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Update Prediction</h2>
    </div>
    <div class="p-6">
      <div class="mb-6 p-4 bg-gray-50 rounded-lg">
        <div class="flex items-center justify-between">
          <div>
            <div class="font-medium text-gray-900">
              <%= @prediction.match.team1&.name || "TBD" %> vs <%= @prediction.match.team2&.name || "TBD" %>
            </div>
            <div class="text-sm text-gray-600">
              <%= @prediction.betting_pool.name %> â€¢ <%= @prediction.match.match_date.strftime("%b %d, %Y at %H:%M") %>
            </div>
          </div>
        </div>
      </div>
      <%= form_with(model: @prediction, local: true, class: "space-y-6") do |form| %>
        <% if @prediction.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@prediction.errors.count, "error") %> prohibited this prediction from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside">
                    <% @prediction.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Update Your Score Prediction</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :predicted_score1, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :predicted_score1, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "First team score",
                  min: 0 %>
              <p class="mt-1 text-sm text-gray-500"><%= @prediction.match.team1&.name || "First team" %> score</p>
            </div>
            <div>
              <%= form.label :predicted_score2, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :predicted_score2, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "Second team score",
                  min: 0 %>
              <p class="mt-1 text-sm text-gray-500"><%= @prediction.match.team2&.name || "Second team" %> score</p>
            </div>
          </div>
        </div>
        <% if @prediction.match.score1.present? && @prediction.match.score2.present? %>
          <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-800">Match Already Played</h3>
                <div class="mt-2 text-sm text-yellow-700">
                  This match has already been completed with a final score of <%= @prediction.match.score1 %> - <%= @prediction.match.score2 %>. You cannot edit predictions for completed matches.
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", @prediction.betting_pool, 
              class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
          <% if @prediction.match.score1.blank? && @prediction.match.score2.blank? %>
            <%= form.submit "Update Prediction", 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
