<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Edit Prediction</h1>
    <%= link_to "Back to Pool", @prediction.betting_pool, 
        class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
  </div>
  <div class="bg-white shadow-md rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Update Prediction</h2>
    </div>
    <div class="p-6">
      <!-- Match Info Banner -->
      <div class="mb-6 p-4 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border border-blue-100">
        <div class="flex items-center justify-between">
          <div>
            <div class="font-semibold text-gray-900 text-lg">
              <%= @prediction.match.participants.map(&:name).join(" vs ") %>
            </div>
            <div class="text-sm text-gray-600 mt-1">
              <%= @prediction.betting_pool.name %> â€¢ <%= @prediction.match.match_date.strftime("%b %d, %Y at %H:%M") %>
            </div>
          </div>
          <div class="text-right">
            <% match_completed = @prediction.match.match_participants.all? { |mp| mp.result&.final } %>
            <% if match_completed %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Completed
              </span>
            <% else %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
                Open
              </span>
            <% end %>
          </div>
        </div>
      </div>
      <%= form_with(model: @prediction, local: true, class: "space-y-6") do |form| %>
        <!-- Error Messages -->
        <% if @prediction.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@prediction.errors.count, "error") %> prohibited this prediction from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside">
                    <% @prediction.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <!-- Match Completed Warning -->
        <% match_completed = @prediction.match.match_participants.all? { |mp| mp.result&.final } %>
        <% if match_completed %>
          <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-yellow-800">Match Already Completed</h3>
                <div class="mt-2 text-sm text-yellow-700">
                  This match has been finalized. You cannot edit predictions for completed matches.
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <!-- Prediction Form -->
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Update Your Score Predictions</h3>
          <div class="space-y-4">
            <%= form.fields_for :predicted_results, @prediction.predicted_results.includes(match_participant: :participant) do |pr_form| %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold">
                      <%= pr_form.object.match_participant.participant.name.first.upcase %>
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-900">
                        <%= pr_form.object.match_participant.participant.name %>
                      </label>
                      <p class="text-xs text-gray-500 mt-0.5">Enter predicted score</p>
                    </div>
                  </div>
                  <div class="flex items-center space-x-3">
                    <%= pr_form.hidden_field :id %>
                    <%= pr_form.number_field :score,
                        class: "w-24 px-4 py-2 text-center text-lg font-semibold border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                        placeholder: "0",
                        min: 0,
                        disabled: match_completed %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <% if @prediction.predicted_results.empty? %>
            <div class="bg-blue-50 border border-blue-200 rounded-md p-4 mt-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-blue-800">No predicted results found</h3>
                  <div class="mt-2 text-sm text-blue-700">
                    This prediction doesn't have any predicted results. You may need to create a new prediction instead.
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <!-- Action Buttons -->
        <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
          <%= link_to "Cancel", @prediction.betting_pool, 
              class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
          <% unless match_completed %>
            <%= form.submit "Update Prediction", 
                class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200 inline-flex items-center" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              Update Prediction
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>