<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">New Prediction</h1>
    <%= link_to "Back to My Predictions", predictions_path, 
        class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
  </div>
  <div class="bg-white shadow-md rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Make a Prediction</h2>
    </div>
    <div class="p-6">
      <%= form_with(model: @prediction, local: true, class: "space-y-6") do |form| %>
        <% if @prediction.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@prediction.errors.count, "error") %> prohibited this prediction from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside">
                    <% @prediction.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div>
          <%= form.label :betting_pool_id, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :betting_pool_id, 
              options_from_collection_for_select(@betting_pools, :id, :name, @prediction.betting_pool_id),
              { prompt: "Select a betting pool" },
              { 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              } %>
          <p class="mt-1 text-sm text-gray-500">Select the betting pool you want to make a prediction for</p>
        </div>
        <div>
          <%= form.label :match_id, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :match_id, 
              options_from_collection_for_select(@matches, :id, :match_display_name, @prediction.match_id),
              { prompt: "Select a match" },
              { 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              } %>
          <p class="mt-1 text-sm text-gray-500">Select the match you want to predict</p>
        </div>
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Your Score Prediction</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <%= form.label :predicted_score1, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :predicted_score1, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "First team score",
                  min: 0 %>
            </div>
            <div>
              <%= form.label :predicted_score2, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.number_field :predicted_score2, 
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "Second team score",
                  min: 0 %>
            </div>
          </div>
        </div>
        <div class="bg-blue-50 border border-blue-200 rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">Prediction Rules</h3>
              <div class="mt-2 text-sm text-blue-700">
                You can only make one prediction per match in each betting pool. Predictions can be edited until the match starts.
              </div>
            </div>
          </div>
        </div>
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", predictions_path, 
              class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
          <%= form.submit "Create Prediction", 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>