<h1 class="font-bold text-4xl">Verify your email</h1>

<p class="text-gray-600 mt-2">We sent a 6-digit code to <strong><%= @verification.email_address %></strong>.</p>

<%= form_with url: signup_verify_path(token: @verification.id), class: "contents" do |form| %>
  <div class="my-5">
    <%= form.text_field :otp, required: true, autofocus: true, autocomplete: "one-time-code", inputmode: "numeric", pattern: "[0-9]*", maxlength: 6, placeholder: "000000", class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full text-center text-2xl tracking-widest font-mono" %>
  </div>

  <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
    <div class="inline">
      <%= form.submit "Verify", class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
    </div>

    <div class="mt-4 text-sm text-gray-500 sm:mt-0">
      <%= link_to "Use a different email", signup_path, class: "text-gray-700 underline hover:no-underline" %>
    </div>
  </div>
<% end %>
