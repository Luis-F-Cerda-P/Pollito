<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900"><%= @participant.name %></h1>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_participant_path(@participant), 
          class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
      <%= link_to "Back to Participants", participants_path, 
          class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
    </div>
  </div>
  <div class="bg-white shadow-md rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Participant Details</h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-1">Participant Name</h3>
          <p class="text-lg text-gray-900"><%= @participant.name %></p>
        </div>
      </div>
    </div>
  </div>
  <% if @participant.matches.any? %>
    <div class="mt-8 bg-white shadow-md rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Recent Matches</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @participant.matches.limit(5).each do |match| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div class="flex items-center space-x-4">
                <% match.participants.each do |participant| %>
                  <span class="font-medium"><%= participant.name %></span>
                  <span class="text-gray-500">vs</span>
                <% end %>
              </div>
              <div class="text-sm text-gray-600">
                <%= match.match_date.strftime("%b %d, %Y %H:%M") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
