<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900"><%= @team.name %></h1>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_team_path(@team), 
          class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
      <%= link_to "Back to Teams", teams_path, 
          class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
    </div>
  </div>
  <div class="bg-white shadow-md rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Team Details</h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-1">Team Name</h3>
          <p class="text-lg text-gray-900"><%= @team.name %></p>
        </div>
        <div>
          <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-1">Country</h3>
          <div class="flex items-center">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
              <%= @team.country_code.upcase %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% if @team.matches.any? %>
    <div class="mt-8 bg-white shadow-md rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Recent Matches</h2>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <% @team.matches.limit(5).each do |match| %>
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div class="flex items-center space-x-4">
                <span class="font-medium"><%= match.team1&.name %></span>
                <span class="text-gray-500">vs</span>
                <span class="font-medium"><%= match.team2&.name %></span>
              </div>
              <div class="text-sm text-gray-600">
                <%= match.match_date.strftime("%b %d, %Y %H:%M") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
