<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Events</h1>
    <% if Current.user&.admin? %>
      <%= link_to "New Event", new_event_path, 
          class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
    <% end %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @events.each do |event| %>
      <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
        <div class="p-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            <%= link_to event.name, event, class: "text-blue-600 hover:text-blue-800" %>
          </h3>
          <% if event.description.present? %>
            <p class="text-gray-600 mb-4 line-clamp-3"><%= event.description %></p>
          <% end %>
          <div class="space-y-2 text-sm text-gray-500">
            <% if event.start_date.present? %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Starts: <%= event.start_date.strftime("%B %d, %Y") %>
              </div>
            <% end %>
            <% if event.end_date.present? %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Ends: <%= event.end_date.strftime("%B %d, %Y") %>
              </div>
            <% end %>
          </div>
          <div class="mt-4 flex justify-between items-center">
            <div class="flex space-x-2">
              <%= link_to "View", event, 
                  class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
              <% if Current.user&.admin? %>
                <%= link_to "Edit", edit_event_path(event), 
                    class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
              <% end %>
            </div>
            <% if Current.user&.admin? %>
              <%= link_to "Delete", event, 
                data: { 
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure you want to delete this match?" 
                },
                class: "text-red-600 hover:text-red-900" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if @events.empty? %>
    <div class="text-center py-12">
      <div class="text-gray-500 text-lg mb-4">No events found</div>
      <% if Current.user&.admin? %>
        <%= link_to "Create your first event", new_event_path, 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
      <% end %>
    </div>
  <% end %>
</div>
