<div class="max-w-2xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">Import FIFA Tournament</h1>
  <% if @success %>
    <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded">
      <h2 class="text-lg font-semibold text-green-800 mb-3">✅ Import Successful!</h2>
      <div class="space-y-2 text-sm">
        <div class="flex justify-between py-2 border-b border-green-100">
          <span class="font-medium">Event:</span>
          <span class="text-green-700"><%= @stats[:event] %></span>
        </div>
        <div class="flex justify-between py-2 border-b border-green-100">
          <span class="font-medium">Participants Created:</span>
          <span class="text-green-700 font-semibold"><%= @stats[:participants_created] %></span>
        </div>
        <div class="flex justify-between py-2 border-b border-green-100">
          <span class="font-medium">Participants Updated:</span>
          <span class="text-green-700"><%= @stats[:participants_updated] %></span>
        </div>
        <div class="flex justify-between py-2 border-b border-green-100">
          <span class="font-medium">Matches Created:</span>
          <span class="text-green-700 font-semibold"><%= @stats[:matches_created] %></span>
        </div>
        <div class="flex justify-between py-2">
          <span class="font-medium">Matches Updated:</span>
          <span class="text-green-700"><%= @stats[:matches_updated] %></span>
        </div>
      </div>
      <div class="mt-4 pt-3 border-t border-green-200">
        <%= link_to "View Tournaments", events_path, class: "text-green-700 hover:text-green-900 font-medium" %>
      </div>
    </div>
  <% end %>
  <% if @error %>
    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded">
      <h2 class="text-lg font-semibold text-red-800 mb-2">❌ Import Failed</h2>
      <p class="text-sm text-red-700"><%= @error %></p>
    </div>
  <% end %>
  <%= form_with url: create_from_json_admin_tournaments_path, method: :post,
                multipart: true, local: true, class: "space-y-4" do |f| %>
    <div>
      <label class="block text-sm font-medium mb-2">
        Upload FIFA Tournament JSON
      </label>
      <%= f.file_field :json_file,
                       accept: "application/json",
                       class: "block w-full text-sm border rounded p-2" %>
      <p class="text-xs text-gray-500 mt-1">
        Download JSON from FIFA's public API and upload here
      </p>
    </div>
    <%= f.submit "Import Tournament",
                 class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 cursor-pointer",
                 data: { disable_with: "Importing..." } %>
  <% end %>
  <div class="mt-8 p-4 bg-yellow-50 border border-yellow-200 rounded">
    <h3 class="font-semibold mb-2">⚠️ How to get the JSON:</h3>
    <ol class="list-decimal list-inside text-sm space-y-1">
      <li>Open FIFA's tournament page in your browser</li>
      <li>Open Developer Tools (F12) → Network tab</li>
      <li>Look for the API call with match data</li>
      <li>Right-click → Copy → Copy response</li>
      <li>Save as .json file and upload here</li>
    </ol>
  </div>
</div>