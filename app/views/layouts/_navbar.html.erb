<nav class="bg-white border-gray-200 dark:bg-gray-900" data-controller="navbar">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="<%= root_path %>" class="flex items-center space-x-3 rtl:space-x-reverse">
      <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Pollito</span>
    </a>
    <div class="flex items-center md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <% if authenticated? %>
        <div data-controller="dropdown" class="relative">
          <button type="button" data-dropdown-target="button" data-action="click->dropdown#toggle" class="flex text-sm bg-gray-800 rounded-full md:me-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600" aria-expanded="false">
            <span class="sr-only">Open user menu</span>
            <div class="relative w-10 h-10 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-600">
              <div class="absolute inset-0 flex items-center justify-center text-gray-600 dark:text-gray-300">
                <%= Current.user.email_address[0].upcase %>
              </div>
            </div>
          </button>
          <!-- Dropdown menu -->
          <div data-dropdown-target="menu" class="absolute right-0 z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700 dark:divide-gray-600">
            <div class="px-4 py-3">
              <span class="block text-sm text-gray-900 dark:text-white"><%= Current.user.email_address %></span>
              <span class="block text-sm text-gray-500 truncate dark:text-gray-400"><%= Current.user.admin? ? "Admin" : "User" %></span>
            </div>
            <ul class="py-2">
              <li>
                <%= link_to "My Predictions", predictions_path, class: dropdown_link_classes %>
              </li>
              <% if Current.user.admin? %>
                <li>
                  <%= link_to "Admin", admin_root_path, class: dropdown_link_classes %>
                </li>
              <% end %>
              <li>
                <%= link_to "Sign out", logout_path, data: { turbo_method: :delete }, class: dropdown_link_classes %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign in", login_path, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      <% end %>
      <button data-navbar-target="button" data-action="click->navbar#toggle" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
    </div>
    <div data-navbar-target="menu" class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1">
      <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
        <li>
          <%= link_to "Home", root_path, class: nav_link_classes(root_path) %>
        </li>
        <% if authenticated? %>
          <li>
            <%= link_to "Betting Pools", betting_pools_path, class: nav_link_classes(betting_pools_path, match_prefix: true) %>
          </li>
          <li>
            <%= link_to "Predictions", predictions_path, class: nav_link_classes(predictions_path, match_prefix: true) %>
          </li>
          <% if Current.user.admin? %>
            <li>
              <%= link_to "Participants", participants_path, class: nav_link_classes(participants_path, match_prefix: true) %>
            </li>
            <li>
              <%= link_to "Events", events_path, class: nav_link_classes(events_path, match_prefix: true) %>
            </li>
            <li>
              <%= link_to "Matches", matches_path, class: nav_link_classes(matches_path, match_prefix: true) %>
            </li>
            <li>
              <%= link_to "Admin", admin_root_path, class: nav_link_classes(admin_root_path, match_prefix: true) %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
