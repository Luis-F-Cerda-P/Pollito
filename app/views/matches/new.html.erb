<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">New Match</h1>
    <%= link_to "Back to Matches", matches_path, 
        class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
  </div>
  <div class="bg-white shadow-md rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Match Information</h2>
    </div>
    <div class="p-6">
      <%= form_with(model: @match, local: true, class: "space-y-6") do |form| %>
        <% if @match.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside">
                    <% @match.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :event_id, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.select :event_id, 
                options_from_collection_for_select(@events, :id, :name, @match.event_id),
                { prompt: "Select an event" },
                { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
          </div>
          <div>
            <%= form.label :round, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.number_field :round, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Round number (optional)" %>
          </div>
        </div>
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Match Participants</h3>
          <div id="participants-container" class="space-y-4">
            <%= form.fields_for :match_participants do |mp_form| %>
              <div class="participant-row bg-gray-50 p-4 rounded-lg border border-gray-200">
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <%= mp_form.label :participant_id, "Participant", class: "block text-sm font-medium text-gray-700 mb-2" %>
                    <%= mp_form.select :participant_id, 
                          options_from_collection_for_select(@participants, :id, :name, mp_form.object.participant_id),
                          { prompt: "Select participant" },
                          { class: "w-full md:w-1/2 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" } %>
                  </div>
                  <div class="ml-4 flex items-center space-x-2">
                    <% if mp_form.object.persisted? %>
                      <%= mp_form.check_box :_destroy, class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 rounded" %>
                      <%= mp_form.label :_destroy, "Remove", class: "text-sm text-gray-700" %>
                    <% else %>
                      <button type="button" onclick="this.closest('.participant-row').remove();" 
                              class="text-red-600 hover:text-red-800 text-sm font-medium">
                        Remove
                      </button>
                    <% end %>
                  </div>
                </div>
                <!-- Score field for each participant -->
                <%= mp_form.fields_for :result, mp_form.object.result || mp_form.object.build_result do |result_form| %>
                  <div class="mt-3">
                    <%= result_form.label :score, "Score (optional)", class: "block text-sm font-medium text-gray-600 mb-1" %>
                    <%= result_form.number_field :score, 
                          class: "w-full md:w-32 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                          placeholder: "Score",
                          min: 0 %>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
          <button type="button" onclick="addParticipant()" 
                  class="mt-4 bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200">
            <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Add Participant
          </button>
        </div>
        <!-- Store participants data for JavaScript -->
        <script>
          const participantsData = [
            <% @participants.each do |participant| %>
              { id: <%= participant.id %>, name: "<%= participant.name %>" },
            <% end %>
          ];
        </script>
        <div>
          <%= form.label :match_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.datetime_local_field :match_date, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        <div class="flex justify-end space-x-3">
          <%= link_to "Cancel", matches_path, 
              class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
          <%= form.submit "Create Match", 
              class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  function addParticipant() {
    const container = document.getElementById('participants-container');
    const timestamp = new Date().getTime();

    // Build options HTML
    let optionsHtml = '<option value="">Select participant</option>';
    participantsData.forEach(participant => {
      optionsHtml += `<option value="${participant.id}">${participant.name}</option>`;
    });

    // Create new participant HTML
    const newHtml = `
      <div class="participant-row bg-gray-50 p-4 rounded-lg border border-gray-200">
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <label class="block text-sm font-medium text-gray-700 mb-2">Participant</label>
            <select name="match[match_participants_attributes][${timestamp}][participant_id]"
                    class="w-full md:w-1/2 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
              ${optionsHtml}
            </select>
          </div>
          <div class="ml-4">
            <button type="button" onclick="this.closest('.participant-row').remove();"
                    class="text-red-600 hover:text-red-800 text-sm font-medium">
              Remove
            </button>
          </div>
        </div>

        <div class="mt-3">
          <label class="block text-sm font-medium text-gray-600 mb-1">Score (optional)</label>
          <input type="number" name="match[match_participants_attributes][${timestamp}][result_attributes][score]"
                 class="w-full md:w-32 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                 placeholder="Score" min="0">
        </div>
      </div>
    `;

    container.insertAdjacentHTML('beforeend', newHtml);
  }
</script>
